# Application Configuration
APP_NAME=Lexicon Crawler
APP_VERSION=0.1.0
DEBUG=False
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://crawler:crawler@localhost:5432/crawler
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_STREAM_NAME=CRAWLER_TASKS
NATS_CONSUMER_NAME=crawler-worker

# Google Cloud Storage
GCS_BUCKET_NAME=lexicon-crawler-storage
# Base64-encoded service account JSON credentials
# To encode: cat service-account.json | base64 -w 0
GOOGLE_APPLICATION_CREDENTIALS_BASE64=

# Crawler Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=5
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/crawler.log
